{
    "name": "mr-rijal/laravel-sms",
    "description": "Unified, extensible SMS gateway for Laravel",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Prashant Rijal",
            "email": "contact@mrrijal.com"
        }
    ],
    "keywords": [
        "laravel",
        "laravel-sms",
        "laravel sms",
        "laravel packages",
        "laravel package",
        "laravel notification",
        "laravel notifications",
        "sms",
        "sms-gateway",
        "sms gateway",
        "sms provider",
        "sms api",
        "messaging",
        "messaging-api",
        "notification",
        "notifications",
        "twilio",
        "twilio-sms",
        "msg91",
        "msg91-api",
        "vonage",
        "nexmo",
        "aws-sns",
        "aws sns",
        "whatsapp",
        "whatsapp-api",
        "whatsapp business",
        "sparrow",
        "sparrow-sms",
        "gateway",
        "provider",
        "driver",
        "queue",
        "queued",
        "webhook",
        "webhooks",
        "template",
        "templates",
        "text-message",
        "text message",
        "sms-sender",
        "sms sender",
        "otp",
        "two-factor",
        "2fa"
    ],
    "require": {
        "php": "^8.4",
        "illuminate/support": "^12.0",
        "guzzlehttp/guzzle": "^7.0",
        "aws/aws-sdk-php": "^3.300"
    },
    "require-dev": {
        "orchestra/testbench": "^10.8",
        "phpunit/phpunit": "^12.5",
        "laravel/pint": "^1.13"
    },
    "autoload": {
        "psr-4": {
            "MrRijal\\LaravelSms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MrRijal\\LaravelSms\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "format": [
            "vendor/bin/pint"
        ],
        "format:test": [
            "vendor/bin/pint --test"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "MrRijal\\LaravelSms\\SmsServiceProvider"
            ],
            "aliases": {
                "Sms": "MrRijal\\LaravelSms\\Facades\\Sms"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}