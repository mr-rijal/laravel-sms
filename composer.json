{
    "name": "mr-rijal/laravel-sms",
    "description": "Unified, extensible SMS gateway for Laravel",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Prashant Rijal",
            "email": "prashantrijal.721@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/contracts": "^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.0",
        "aws/aws-sdk-php": "^3.300"
    },
    "require-dev": {
        "orchestra/testbench": "^9|^10",
        "phpunit/phpunit": "^9|^10",
        "laravel/pint": "^1",
        "larastan/larastan": "^2|^3"
    },
    "autoload": {
        "psr-4": {
            "MrRijal\\LaravelSms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MrRijal\\LaravelSms\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit"
        ],
        "format": [
            "vendor/bin/pint"
        ],
        "format:test": [
            "vendor/bin/pint --test"
        ],
        "analyse": [
            "vendor/bin/phpstan analyse -c phpstan.neon.dist --memory-limit=2G"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "MrRijal\\LaravelSms\\SmsServiceProvider"
            ],
            "aliases": {
                "Sms": "MrRijal\\LaravelSms\\Facades\\Sms"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}